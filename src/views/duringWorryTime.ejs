<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WorryLess</title>
    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />

    <!-- FontAwesome Library -->
    <script
      src="https://kit.fontawesome.com/3972ff60ea.js"
      crossorigin="anonymous"
    ></script>

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/duringWorryTime.css" />

    <!-- FAVICON -->
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico" />

  </head>

  <body>
    <!-- Header -->
    <nav class="navbar">
      <a class="navbar-brand" href="#">
        <img
          src="/img/WorryLessIcon.png"
          width="30"
          height="30"
          class="d-inline-block align-top"
          alt=""
        />
        <span>WorryLess</span>
      </a>
    </nav>

    <!-- Display worry times -->
    <main>
      <h3>Worry time left:</h3>
      <div class="row justify-content-center" id="countdown"></div>

      <p id="totalworrytime" style="display: none;"><%= worryDuration%> minutes</p>
      
      <div class="row justify-content-center mt-5 mb-2"></div>
      <h3>Your Worries:</h3>
      <div class="container">
        <div class="row">
          <div class="col">
            <span>Select all</span>
            <input type="checkbox" id="selectall" name="selectall" />
          </div>
          <div class="col">
            <button class="btn trash-btn" id="deleteWorry" name="deleteWorry">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
          </div>
        </div>
      </div>
      <% if (worryEntries.length === 0) { %>
      <p>There is nothing to worry about!</p>
      <% } %>
      <ul class="list-group container">
        <% worryEntries.forEach(entry=> { %>

        <li class="list-group-item" id="<%= entry.id %>">
          <div class="form-check">
            <label class="form-check-label" for="unfinishedWorry">
              <%= entry.description %>
            </label>
            <input
              class="form-check-input"
              type="checkbox"
              value=""
              id="unfinishedWorry"
            />
          </div>
        </li>

        <% }) %>
      </ul>
      <br />
      <!-- <div class="row justify-content-center mt-2">
        <button type="button" class="btn btn-primary" id="btnId2">
          Start worry time
        </button>
      </div> -->

      <div class="row justify-content-center mt-2">
        <button type="button" class="btn btn-primary" id="exitWorryTimeBtn">
          Exit Worry Time
        </button>
      </div>

      <div class="text-center py-5"></div>
    </main>

    <!-- Footer -->
    <%- include("./partials/footer"); %> 
  
  </body>
  <script src="/scripts/duringworry.js"></script>
</html>
