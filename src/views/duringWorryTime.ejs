<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WorryLess</title>
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <link
      rel="stylesheet"
      href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="/styles/home_page.css" />

    <!-- FAVICON -->
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico" />

    <style>
      .btn-primary {
        width: 50%;
      }
    </style>
  </head>

  <body>
    <!-- Header -->
    <nav class="navbar">
      <a class="navbar-brand" href="#">
        <img
          src="/img/WorryLessIcon.png"
          width="30"
          height="30"
          class="d-inline-block align-top"
          alt=""
        />
        <span>WorryLess</span>
      </a>
    </nav>

    <!-- Display worry times -->
    <main>
      <h5>Worry time left:</h5>
      <div class="row justify-content-center mt-5 mb-2"></div>
      <div
        class="row justify-content-center border rounded-pill"
        id="countdown3"
      ></div>
      <br />
      <div class="row justify-content-center mt-2">
        <button type="button" class="btn btn-primary" id="btnId2">
          Start worry time
        </button>
      </div>
      <p>Your Worries:</p>

      <% if (worryTimes.length === 0) { %>
      <p>You don't have worry time today</p>
      <% } %>
      <ul class="list-group">
        <% worryTimes.forEach(entry=> { %>

        <li class="list-group-item">
          <div><%= entry.description %></div>
          <div class="form-check form-check-inline">
            <% if (entry.finished === false){ %>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="flexCheckChecked"
              />
            </div>
            <% } else{ %>
            <div class="form-check">
              <input
                class="form-check-input"
                type="checkbox"
                value=""
                id="flexCheckChecked"
                checked
              />
            </div>
            <% } %>
          </div>
        </li>

        <% }) %>
      </ul>

      <form action="/home" method="get">
        <button class="btn-primary btn">Exit Worry Time</button>
      </form>
    </main>
  </body>
  <script src="/scripts/duringworry.js"></script>
</html>
