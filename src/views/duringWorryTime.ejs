<!DOCTYPE html>
<html lang="en">

<head>
  <meta charset="UTF-8" />
  <meta http-equiv="X-UA-Compatible" content="IE=edge" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>WorryLess</title>
  <!-- JQuery -->
  <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>

  <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/css/bootstrap.min.css" rel="stylesheet" integrity="sha384-1BmE4kWBq78iYhFldvKuhfTAU6auU8tT94WrHftjDbrCEXSU1oBoqyl2QvZ6jIW3" crossorigin="anonymous">
  <link rel="stylesheet"
    href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />

  <!-- FontAwesome Library -->
  <script src="https://kit.fontawesome.com/3972ff60ea.js" crossorigin="anonymous"></script>

  <!-- Custom CSS -->
  <link rel="stylesheet" href="/styles/layout.css" />
  <link rel="stylesheet" href="/styles/duringWorryTime.css" />

  <!-- FAVICON -->
  <link rel="icon" type="image/x-icon" href="/img/favicon.ico" />

</head>

<body>
  <!-- Header -->
  <nav class="navbar">
    <a class="navbar-brand" href="#">
      <img src="/img/WorryLessIcon.png" width="30" height="30" class="d-inline-block align-top" alt="" />
      <span>WorryLess</span>
    </a>
  </nav>

  <!-- Display worry times -->
  <main>
    <div class="timer-wrapper">
      <h3>Worry time left:</h3>
      <div class="row justify-content-center" id="countdown"></div>

      <p id="totalworrytime" style="display: none;">
        <%= worryDuration%> minutes
      </p>

    </div>
    <div class="notes-wrapper">
      <h3>Notes:</h3>
      <p>
        <%= worryTimeNotes %>
      </p>
    </div>

    <div class="worries-wrapper">
      <h3>Your Worries:</h3>
      <div class="container">
        <div class="row">
          <div class="col">
            <span>Select all</span>
            <input type="checkbox" id="selectall" name="selectall" />
          </div>
          <div class="col">
            <button class="btn trash-btn" id="deleteWorry" name="deleteWorry">
              <i class="fa fa-trash" aria-hidden="true"></i>
            </button>
          </div>
        </div>
      </div>

      <% if (worryEntries.length===0) { %>
        <p>There is nothing to worry about!</p>
        <% } %>
          <ul class="list-group container">
            <% worryEntries.forEach(entry=> { %>

              <li class="list-group-item" id="<%= entry.id %>">
                <div class="form-check">
                  <label class="form-check-label" for="unfinishedWorry">
                    <%= entry.description %>
                  </label>
                  <input class="form-check-input" type="checkbox" value="" id="unfinishedWorry" />
                </div>
              </li>

              <% }) %>
          </ul>
          <br />
    </div>

    <div class="row justify-content-center mt-2">
      <button id="exitWorryTimeBtn" type="button" class="btn btn-primary exitBtn" data-bs-toggle="modal" data-bs-target="#exitWorryTime">
        Exit Worry Time
      </button>

      <!-- Modal -->
      <div class="modal fade" id="exitWorryTime" tabindex="-1" aria-labelledby="exitConfirmation" aria-hidden="true">
        <div class="modal-dialog modal-dialog-centered">
          <div class="modal-content">
            <div class="modal-header">
              <h5 class="modal-title" id="exampleModalLabel">Leaving so soon?</h5>
              <button type="button" class="btn-close" data-bs-dismiss="modal" aria-label="Close"></button>
            </div>
            <div class="modal-body">
              Exiting will finish your worry time!
            </div>
            <div class="modal-footer">
              <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Stay</button>
              <button type="button" class="btn btn-primary" id="confirmExitWorryTime">Exit!</button>
            </div>
          </div>
        </div>
      </div>

    </div>

    <div class="text-center py-5"></div>
  </main>

</body>
<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js" integrity="sha384-ka7Sk0Gln4gmtz2MlQnikT1wXgYsOg+OMhuP+IlRH9sENBO0LRn5q+8nbTov4+1p" crossorigin="anonymous"></script>
<script src="/scripts/duringworry.js"></script>

</html>