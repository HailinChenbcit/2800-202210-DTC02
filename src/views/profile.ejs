<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Worryless - Profile Page</title>

    <!-- Bootstrap CSS -->
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC"
      crossorigin="anonymous"
    />
    <!-- Google Icons -->
    <link
      rel="stylesheet"
      href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200"
    />

    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles/layout.css" />
    <link rel="stylesheet" href="styles/profile.css" />

    <!-- FAVICON -->
    <link rel="icon" type="image/x-icon" href="img/favicon.ico" />
  </head>

  <body>
    <!-- Header -->
    <nav class="navbar">
      <a class="navbar-brand" href="#">
        <img
          src="/img/WorryLessIcon.png"
          width="30"
          height="30"
          class="d-inline-block align-top"
          alt=""
        />
        <span>WorryLess</span>
      </a>
    </nav>
    <main>
        <div class="user-info-wrapper">
            <div class="avatar-wrapper">
                <img src="data:image/<%=user.avatar.contentType%>;base64,<%=user.avatar.data.toString('base64')%>">
            </div>
            <div class="name-wrapper">
                <p><%= user.firstname %>, <%= user.lastname %></p>
            </div>
            
        </div>
      <div class="moodgraph_container">
        <canvas id="moodgraph"></canvas>
      </div>
        <button type="button" class="LogOutButton" >
            <a href="/auth/logout">Logout</a>
        </button>
    </main>
    <!-- Footer -->
    <footer
      id="nav"
      class="navbar justify-content-evenly fixed-bottom"
      style="height: 4em"
    >
      <a class="icon-btn" href="/">
        <i class="material-symbols-outlined">home</i>
        <p class="btm-btn-text">Home</p>
      </a>
      <a class="icon-btn" href="/">
        <i class="material-symbols-outlined">add_box</i>
        <p class="btm-btn-text">Journal</p>
      </a>
      <a class="icon-btn" href="/">
        <i class="material-symbols-outlined">alarm</i>
        <p class="btm-btn-text">Alarms</p>
      </a>
      <a class="icon-btn" href="/">
        <i class="material-symbols-outlined">person</i>
        <p class="btm-btn-text">Profile</p>
      </a>
    </footer>

    <script src="https://cdn.jsdelivr.net/npm/chart.js"></script>
    <script src="scripts/profile.js"></script>
  </body>
</html>
