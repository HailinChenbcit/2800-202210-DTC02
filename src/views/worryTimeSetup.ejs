<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>WorryLess</title>
    <!-- Bootstrap Library CSS CDN -->
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/css/bootstrap.min.css" rel="stylesheet"
      integrity="sha384-EVSTQN3/azprG1Anm3QDgpJLIm9Nao0Yz1ztcQTwFspd3yD65VohhpuuCOmLASjC" crossorigin="anonymous" />
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.2/dist/js/bootstrap.bundle.min.js"
      integrity="sha384-MrcW6ZMFYlzcLA8Nl+NtUVF0sA7MsXsP1UyJoMp4YLEuNSfAP+JcXn/tWtIaxVXM"
      crossorigin="anonymous"></script>
    <!-- JQuery -->
    <script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
    <!-- Custom CSS -->
    <link rel="stylesheet" href="/styles/layout.css" />
    <!-- <link rel="stylesheet" href="/styles/home_page.css" /> -->
    <link rel="stylesheet" href="/styles/worryTimeSetup.css">
  
    <link rel="stylesheet"
      href="https://fonts.sandbox.google.com/css2?family=Material+Symbols+Outlined:opsz,wght,FILL,GRAD@20..48,100..700,0..1,-50..200" />
    </head>
    <!-- FAVICON -->
    <link rel="icon" type="image/x-icon" href="/img/favicon.ico" />
</head>
<body>
      <!-- Header -->
  <nav class="navbar">
    <a class="navbar-brand" href="/home">
      <img src="/img/WorryLessIcon.png" width="30" height="30" class="d-inline-block align-top" alt="WorryLess Icon" />
      <span>WorryLess</span>
    </a>
  </nav>
    <main>
      <form action="/worryTime/create" method="post">
      <!-- Time/Date -->
        <div class="dateContainer">
          <h3 for="time"> Date/Time </h3>
          <input
            step="60"
            type="datetime-local"
            name="time"
            id="time"
            class="form-control"
            default=""
            required
          />
        </div>
        <div class="worryDurationContainer">
          <h3>Select your countdown time:</h3>     
          <div class="worryDurationLabels">

            <label for="timeChoice1"
            >5 mins <br />
            <input type="radio" id="timeChoice1" name="duration" value="5" checked />
            </label>
        
            <label for="timeChoice2"
            >10 mins <br />
            <input type="radio" id="timeChoice2" name="duration" value="10" checked />
            </label>
            <label for="timeChoice3"
            >15 mins <br />
            <input type="radio" id="timeChoice3" name="duration" value="15" checked />
            </label>

            <label for="timeChoice4"
            >30 mins <br />
            <input type="radio" id="timeChoice4" name="duration" value="30" checked />
            </label>

            <label for="timeChoice5"
            >1 hour <br />
            <input type="radio" id="timeChoice5" name="duration" value="60" checked />
            </label>
          </div>
        </div>

        <div class="form-check form-switch">
          <h3 class="form-check-label" for="flexSwitchCheckDefault">Enable Notficication:</h3>
          <input class="form-check-input" type="checkbox" role="switch" id="flexSwitchCheckDefault">
        </div>

        <div class="worryListContainer">
          <h3>Pick your worries:</h3>
          <div class="worryContent">
            <% worryData.forEach(worryEntry => { %>
             <div class="worryCard" id="<%= worryEntry.id %>">
              <div class="worryCardHeader">
                <div class="worryTime">
                  <span><%= worryEntry.datetime %></span>
                </div>
              </div>
              <div class="worryBody">
                <div class="worryDescription">
                  <p>Description:</p>
                  <p><%= worryEntry.worryDescription %></p>
                </div>
                <input type="checkbox" class="worryCheckbox" name="worries" value="<%= worryEntry.id %>">
              </div>
               </div>
            <% }) %>
          </div>
        </div>
        <div class="NoteContainer">
          <h3>Notes:</h3>
          <textarea
            name="notes"
            id="notes"
            cols="44"
            rows="8"
          ></textarea>
        </div>

        <br />
        <input type="submit" class="worryTimeSaveButton" value="Save" />
      </form>
    </main>
    <%- include("./partials/footer"); %> 
</body>
</html>